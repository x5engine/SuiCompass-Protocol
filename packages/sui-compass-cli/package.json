{
  "name": "sui-compass-cli",
  "version": "1.0.0",
  "description": "CLI tool for SuiCompass - AI-Powered DeFi Assistant for Sui Network",
  "type": "module",
  "main": "index.js",
  "bin": {
    "sui-compass": "./bin/ghost.js",
    "compass": "./bin/ghost.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "casper",
    "blockchain",
    "defi",
    "staking",
    "cli",
    "ai",
    "cryptocurrency",
    "web3"
  ],
  "author": "CasperGhost Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/casperghost/casper-ghost"
  },
  "dependencies": {
    "@embedapi/core": "^1.0.11",
    "@mysten/sui": "^1.0.0",
    "commander": "^12.1.0",
    "inquirer": "^12.0.1",
    "axios": "^1.7.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [".js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    }
  }
}
